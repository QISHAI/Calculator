<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calculator.CalculatorActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="300dp"
            android:layout_height="126dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/show"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="5" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="AC"
            android:id="@+id/ac_btn"
            android:layout_row="6"
            android:layout_column="0" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="x²"
            android:id="@+id/sq_btn"
            android:layout_row="6"
            android:layout_column="1" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="x³"
            android:id="@+id/cube_btn"
            android:layout_row="6"
            android:layout_column="2" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:id="@+id/percent_btn"
            android:layout_row="6"
            android:layout_column="3"
            android:text="%" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="1"
            android:id="@+id/one_btn"
            android:layout_row="7"
            android:layout_column="0" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="2"
            android:id="@+id/two_btn"
            android:layout_row="7"
            android:layout_column="1" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="3"
            android:id="@+id/three_btn"
            android:layout_row="7"
            android:layout_column="2" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="+"
            android:id="@+id/plus_btn"
            android:layout_row="7"
            android:layout_column="3" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="cos"
            android:id="@+id/cos_btn"
            android:layout_row="7"
            android:layout_column="4" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="4"
            android:id="@+id/four_btn"
            android:layout_row="8"
            android:layout_column="0" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="5"
            android:id="@+id/five_btn"
            android:layout_row="8"
            android:layout_column="1" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="6"
            android:id="@+id/six_btn"
            android:layout_row="8"
            android:layout_column="2" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="-"
            android:id="@+id/minus_btn"
            android:layout_row="8"
            android:layout_column="3" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="2进制"
            android:id="@+id/jinzhi_btn"
            android:layout_row="8"
            android:layout_column="4" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="7"
            android:id="@+id/seven_btn"
            android:layout_row="9"
            android:layout_column="0" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="8"
            android:id="@+id/eight_btn"
            android:layout_row="9"
            android:layout_column="1" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="9"
            android:id="@+id/nine_btn"
            android:layout_row="9"
            android:layout_column="2" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="×"
            android:id="@+id/multiply_btn"
            android:layout_row="9"
            android:layout_column="3" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="8进制"
            android:id="@+id/bajinzhi_btn"
            android:layout_row="9"
            android:layout_column="4" />

        <Button

            android:layout_width="60dp"
            android:layout_height="65dp"
            android:id="@+id/back_btn"
            android:layout_row="10"
            android:layout_column="0"
            android:text="←" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="0"
            android:id="@+id/zero_btn"
            android:layout_row="10"
            android:layout_column="1" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="="
            android:id="@+id/equal_btn"
            android:layout_row="10"
            android:layout_column="2" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="÷"
            android:id="@+id/divide_btn"
            android:layout_row="10"
            android:layout_column="3" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="sin"
            android:id="@+id/sin_btn"
            android:layout_row="6"
            android:layout_column="4" />

        <Button
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:text="."
            android:id="@+id/spot_btn"
            android:layout_row="10"
            android:layout_column="4" />

    </GridLayout>
</RelativeLayout>
